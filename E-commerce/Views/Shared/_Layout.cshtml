<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Candleaf - @ViewData["Title"]</title>
    <link rel="icon" type="image/svg" href="/favicon.svg">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tabler/icons-webfont@latest/dist/tabler-icons.min.css"/>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/E_commerce.styles.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow vw-100 position-fixed navbarindex" id="navbar">
        <div class="container d-flex justify-content-between align-items-center">
            <button type="button" class="navbar-toggler order-sm-0" data-bs-toggle="collapse" data-bs-target="#navbarToggle" aria-controls="navbarToggle" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <a class="navbar-brand mx-auto d-flex align-items-center justify-content-center order-1 order-sm-1" href="@Url.Action("Index", "Home")">
                <img src="/img/logo.png" alt="logo" class="img-fluid">
            </a>

            <div class="d-flex align-items-center gap-3 order-3 order-sm-3">
                <a class="navbar-brand" asp-area="" asp-controller="Login" asp-action="SignIn">
                    <img src="/img/user.png" alt="user" width="30" height="30">
                </a>
                <a class="navbar-brand" href="#">
                    <img src="/img/shopping-cart.png" alt="shopping cart" width="30" height="30">
                </a>
            </div>

            <div class="collapse navbar-collapse order-2" id="navbarToggle">
                <ul class="navbar-nav mx-auto gap-5">
                    <li class="nav-item">
                        <a class="nav-link text-dark roboto-medium clickable" id="discovery">Discovery</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark roboto-medium" asp-area="" asp-controller="Home" asp-action="AboutMe">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark roboto-medium" asp-area="" asp-controller="Home" asp-action="AboutMe">About me</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>







    <div class="p-0">
            <main role="main">
                @RenderBody()
            </main>
    </div>

    <footer class="bg-body pt-5 border-top w-100 m-0 p-0">
        <div class="container">
            <div class="row row-cols-5">
                <div class="col mb-5">
                    <img src="~/img/footer-logo.png" alt="Alternate Text" class="img-fluid" />
                    <p class="poppins-light text-white sma">Your natural candle made for your home and for your wellness.</p>
                </div>

                <div class="col mb-5">
                </div>

                <div class="col mb-5">
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-success poppins-medium">Discovery</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-white poppins-light">New Features</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-white poppins-light">Most searched</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-white poppins-light">Most selled</a></li>
                    </ul>
                </div>

                <div class="col mb-5">
                </div>

                <div class="col mb-5">
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2"><a asp-area="" asp-controller="Home" asp-action="AboutMe" class="nav-link p-0 text-success poppins-medium">About me</a></li>
                        <li class="nav-item mb-2"><a href=mailto:daviconradoneto@gmail.com class="nav-link p-0 text-white poppins-light">Contact-me</a></li>
                        <li class="nav-item mb-2"><a href="https://www.linkedin.com/in/daviconrado/" class="nav-link p-0 text-white poppins-light">LinkedIn</a></li>
                        <li class="nav-item mb-2"><a href="https://github.com/daviconrado" class="nav-link p-0 text-white poppins-light">Github</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="flex-grow-1 d-flex bg-secondary justify-content-between align-items-center" style="height:6rem;">
            <div class="container d-flex justify-content-between">
                <p class="m-0">Candleaf All Rights Reserved.</p>
                <p class="m-0">Created by Davi Conrado &#10084;</p>
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
